<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PBL | Join Chat</title>

    <!-- Bootswatch Darkly -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/darkly/bootstrap.min.css"
    integrity="sha384-nNK9n28pDUDDgIiIqZ/MiyO3F4/9vsMtReZK39klb/MtkZI3/LtjSjlmyVPS3KdN" crossorigin="anonymous">
    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@5.4.0/dist/ionicons/ionicons.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JCV7SPJ04Y"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-JCV7SPJ04Y');
    </script>
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/join.css">
    <link rel='shortcut icon' type='image/x-icon' href='/images/favicon.ico'>
</head>

<body>
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 mt-3">
        <div class="card shadow">
            <img src="https://images.unsplash.com/photo-1526948531399-320e7e40f0ca?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=800&q=80"
                alt="login-form-image" class="card-img-top">
            <div class="card-body">
                <form action="/join/<%= roomId %>" method="POST">
                    <legend>Enter your information</legend>
                    <div class="form-group mb-3">
                        <div class="d-flex justify-content-between">
                            <label class="form-label pt-1" for="username">Username</label>
                            <button id="dice" class="btn btn-link p-0">
                                <ion-icon style="font-size: 28px;" name="dice-outline"></ion-icon>
                            </button>
                        </div>
                        <input class="form-control" type="text" id="username" name="username"
                            placeholder="Enter username" autofocus required>
                    </div>
                    <div class="form-group mb-3">
                        <label class="col-form-label" for="language">Select Your Language</label>
                        <%- include('partials/languageSelector') %>
                    </div>
                    <button class="btn btn-success btn-block">Join Room</button>
                    <a href="/" class="btn btn-secondary btn-block">Back to Homepage</a>
                </form>
            </div>
        </div>
    </div>

    <script src="/javascripts/join.js"></script>

</body>

</html>